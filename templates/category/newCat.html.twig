{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}


<section>
    <div class="titre">
        {% if edit %}
            <h3 >Modifier une catégorie </h3>
        {% else %}
            <h3 >Ajouter une catégorie </h3>
        {% endif %}
        <a href="{{ path('app_category') }}"><i class="fa-solid fa-rotate-left"></i></a>
    </div>



    <div class="addCat"> 
        <div class="formInput">
            {{ form_start(formCategory)}}
        </div>

        <div class="formInput">
        {{ form_row(formCategory.libelleCategory)}}
    </div>

        <div class="formButton">
            {{ form_widget(formCategory.submit) }} 
        </div>

        {{ form_end(formCategory)}}
    </div>
</section>



{% endblock %}
