{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}

<section>
    <div class="titre">
        <h3 >Liste des cat√©gories</h3>
        <a href="{{ path('add_cat') }}"><i class="fa-solid fa-plus"></i></a>
    </div>

    <div class="blocCat">
        <div class="listCat"> 

            {% for category in categories %}
                
                    <p> 
                        <a href="{{ path('app_detailCat', {'id':category.id}) }}">{{ category.  libelleCategory }}</a>
                    </p>
                    <p>
                        <a href="{{ path('edit_cat', {'id':category.id}) }}"><i class="fa-solid fa-pencil"></i></a>
                        <a href="{{ path('app_deleteCat', {'id':category.id}) }}"><i class="fa-solid fa-trash"></i></a>
                    </p>
                
            {% endfor %}
        </div>
    </div>
</section>



{% endblock %}
