{% extends 'base.html.twig' %}

{% block title %}Hello TrainingController!{% endblock %}

{% block body %}

<section>
    <div class="titre">
        {% if edit %}
            <h3 >Modifier une formation </h3>
        {% else %}
            <h3 >Ajouter une formation </h3>
        {% endif %}
        <a href="{{ path('app_training') }}"><i class="fa-solid fa-rotate-left"></i></a>
    </div>



    <div class="addTraining"> 

        {{ form_start(formTraining)}}
            
        <div class="formInput">
            {{ form_row(formTraining.libelleTraining)}}
        </div>

        <div class="formButton">
            {{ form_widget(formTraining.submit) }} 
        </div>

        {{ form_end(formTraining)}}

    </div>
</section>



{% endblock %}
